<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.weblake.business.loyaltyapp.IndexActivity"
    tools:showIn="@layout/activity_index">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/happtyToSeeYouPadding"
            android:text="@string/happyToSeeYou"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

   <!--     <Button
            android:id="@+id/indexBTFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/indexBTFBMargin"
            android:background="@drawable/fb_button"
            android:drawableLeft="@mipmap/fb_logo"
            android:drawablePadding="1dip"
            android:elevation="0dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="3dip"
            android:text="@string/facebook"
            android:textColor="#54545E"
            android:textSize="13dip" />-->

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/indexBTFBMargin"
            android:textSize="20sp"

            />
        <Button
            android:id="@+id/indexBTGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/indexBTGmailMarginLeft"
            android:layout_marginRight="@dimen/indexBTGmailMarginLeft"
            android:layout_marginTop="@dimen/indexBTGmailMarginTop"
            android:background="@drawable/fb_button"
            android:drawableLeft="@mipmap/gmail_logo"
            android:drawablePadding="1dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="3dip"
            android:text="@string/gmail"
            android:textColor="#54545E"
            android:textSize="13dip" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/or"
                android:textColor="#FFFFFF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tvText"
                android:background="#7d847d" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/tvText"
                android:background="#656568" />
        </RelativeLayout>

        <EditText
            android:id="@+id/indexETEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dip"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/indexBTConnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/connexion_button"

            android:drawablePadding="1dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="3dip"
            android:text="@string/connexion"
            android:textColor="#FFFFFF"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgotPassword"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
